<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/kulitkering"
    android:orientation="vertical"
    tools:context=".activity.HasilKering">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_kembali"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kembali"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="@dimen/_14sdp"
            android:layout_marginLeft="@dimen/_240sdp"
            android:layout_marginTop="@dimen/_25sdp">
        </androidx.appcompat.widget.AppCompatTextView>

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_130sdp"
            android:layout_marginLeft="@dimen/_25sdp"
            android:layout_gravity="left"
            android:text="Kulit Kering :"
            android:textColor="@color/black"
            android:gravity="center"
            android:textSize="@dimen/_28sdp"
            >
        </androidx.appcompat.widget.AppCompatTextView>

        <TextView
            android:layout_width="@dimen/_250sdp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:text="Kulit kering terasa lebih kencang,terlebih setelah membersihkan wajah dan terlihat bersisik atau kemerahan.Orang dengan kulit kering lebih gampang terkena iritasi, kemerahan dan inflamasi.Selain itu gampang terkena alergi dengan bahan-bahan tertentu di dalam skin care yang digunakan dan lebih cocok dengan krim dariapada lotion, karena krim dapat menghidrasi kulit lebih banyak"
            android:textColor="@color/black"
            android:textSize="@dimen/_16sdp"
            android:textStyle="normal" />



</LinearLayout>